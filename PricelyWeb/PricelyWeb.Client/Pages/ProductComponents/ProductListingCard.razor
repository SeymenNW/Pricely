@page "/card"
<MudCard Color="Color.Primary" Class="border-2 mb-4 flex h-96 w-72 flex-col justify-between rounded-3xl p-6 text-center">
    <img class="mx-auto h-40 w-auto rounded-full" src="@ImageLink" alt="AirTag image" />

    <MudCardContent Class="mt-4 flex flex-col items-center">
        <MudText Class="text-base font-semibold text-red-500">Gratis gravering</MudText>
        <MudText Color="Color.Primary" Class="mt-1 h-10 max-w-full overflow-x-auto whitespace-nowrap text-center text-lg font-medium text-black">
            @Title
        </MudText>
        <MudText Color="Color.Primary" Class="mt-2 text-xl font-normal">@Price</MudText>
    </MudCardContent>
</MudCard>





@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string ImageLink { get; set; }


    [Parameter]
    public string Price { get; set; }

}
